<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/shopshow_re"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:textSize="16sp"
                    android:text="            确认订单"
                    android:gravity="center_vertical"
                    />

                <ImageView
                    android:id="@+id/shopshow_backpay"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/leftbackbutton_titlebar_pressed"
                    android:layout_marginLeft="8dp"
                    />
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#9999"
                android:layout_below="@id/shopshow_re"
                />
            <!--收货地址  开始-->
            <LinearLayout
                android:id="@+id/order_address"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                   />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="收货人：       张红          18478398842"
                        android:layout_marginTop="20dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="收货地址：北京市海淀区上地街道八维研修学院"/>
                </LinearLayout>
            </LinearLayout>
            <!--收货地址  结尾-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/goods_ll"
                android:layout_below="@id/order_address">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
                <ListView
                    android:id="@+id/buylist"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"/>

                <RelativeLayout
                    android:id="@+id/order_2"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#fff"
                    android:gravity="center_vertical"
                    android:layout_below="@+id/order_1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="购买数量"
                        android:textColor="#000"
                        android:layout_marginLeft="18dp"
                        android:layout_marginStart="18dp"
                        android:id="@+id/textView15"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                    <LinearLayout
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="250dp"
                        >

                        <Button
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:text="—"
                            android:id="@+id/order_jian"/>

                        <TextView
                            android:id="@+id/order_jj_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1"
                            android:layout_marginLeft="10dp"
                            />

                        <Button
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:text="+"
                            android:id="@+id/order_jia"
                            android:layout_marginLeft="10dp"
                            />

                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/order_3"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#fff"
                    android:gravity="center_vertical"
                    android:layout_below="@+id/order_2"
                    android:layout_marginTop="1dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="配送方式"
                        android:textColor="#000"
                        android:layout_marginLeft="18dp"
                        android:layout_marginStart="18dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:id="@+id/textView16" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="快递￥10.00"
                        android:textColor="#000"
                        android:textSize="12sp"
                        android:layout_marginRight="24dp"
                        android:layout_marginEnd="24dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=">"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        />

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/order_4"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#fff"
                    android:gravity="center_vertical"
                    android:layout_below="@+id/order_3"
                    android:layout_marginTop="1dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="运费险"
                        android:textColor="#000"
                        android:layout_marginLeft="18dp"
                        android:layout_marginStart="18dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="卖家送，确认收货前退货可赔"
                        android:textColor="#000"
                        android:textSize="12sp"
                        android:layout_marginRight="24dp"
                        android:layout_marginEnd="24dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=">"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/order_5"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#fff"
                    android:gravity="center_vertical"
                    android:layout_below="@+id/order_4"
                    android:layout_marginTop="1dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="卖家留言："
                        android:textColor="#000"
                        android:layout_marginLeft="18dp"
                        android:layout_marginStart="18dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:id="@+id/textView19" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/textView19"
                        android:layout_toEndOf="@+id/textView19"
                        android:textSize="14sp"
                        android:hint="选填：对本次交易的说明(建议填写已和卖家协商一致的内容)"
                        />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/order_6"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#fff"
                    android:gravity="center_vertical"
                    android:layout_below="@+id/order_5"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true">

                    <TextView
                        android:id="@+id/order_sum_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="共1件商品"
                        android:textColor="#000"
                        android:layout_marginRight="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_alignBaseline="@+id/order_goods_xiao_price"
                        android:layout_alignBottom="@+id/order_goods_xiao_price"
                        android:layout_toLeftOf="@+id/textView21"
                        android:layout_toStartOf="@+id/textView21" />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000"
                        android:text="小计："
                        android:id="@+id/textView21"
                        android:layout_alignBaseline="@+id/order_goods_xiao_price"
                        android:layout_alignBottom="@+id/order_goods_xiao_price"
                        android:layout_toLeftOf="@+id/order_goods_xiao_price"
                        android:layout_toStartOf="@+id/order_goods_xiao_price" />

                    <TextView
                        android:id="@+id/order_goods_xiao_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#FF6600"
                        android:text="￥"
                        android:layout_marginRight="5dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/order_7"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_alignParentBottom="true"
                    android:background="#fff"
                    >

                    <Button
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:text="提交订单"
                        android:textColor="#fff"
                        android:layout_alignParentRight="true"
                        android:id="@+id/order_order" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="合计："
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/order_goods_heji_price"
                        android:layout_toStartOf="@+id/order_goods_heji_price"
                        android:id="@+id/textView22" />

                    <TextView
                        android:id="@+id/order_goods_heji_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#FF6600"
                        android:text="￥1"
                        android:layout_marginRight="5dp"
                        android:layout_alignBaseline="@+id/order_order"
                        android:layout_alignBottom="@+id/order_order"
                        android:layout_toLeftOf="@+id/order_order"
                        android:layout_toStartOf="@+id/order_order" />

                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#9999"
                    android:layout_above="@id/order_7"
                    />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>