<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/log_img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/leftbackbutton_titlebar_pressed"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="帮助"
            android:textSize="20sp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/my_iv"
            android:layout_marginLeft="290dp"
            />
    </RelativeLayout>
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:src="@mipmap/touch_home"
        android:layout_marginTop="25dp"
        />
    <EditText
        android:id="@+id/log_name"
        android:layout_marginTop="20dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="手机号/会员名/邮箱"
        android:layout_gravity="center"
        android:textSize="20sp"
        />
    <EditText
        android:id="@+id/log_pwd"
        android:layout_marginTop="10dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="请输入密码"
        android:layout_gravity="center"
        android:textSize="20sp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/log_reg"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:textSize="15sp"
            android:gravity="center_vertical"
            android:text="立即注册"
            android:layout_marginLeft="30dp"
            />
        <TextView
            android:id="@+id/log_forget"
            android:layout_width="10dp"
            android:layout_weight="1"
            android:textSize="15sp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="130dp"
            android:text="忘记密码"
            />
    </LinearLayout>

    <Button
        android:id="@+id/log_bt"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/logshape"
        android:text="登录"
        android:textColor="#fff"
        android:textSize="20sp" />
</LinearLayout>