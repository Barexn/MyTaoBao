<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/shopshow_re"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="18sp"
            android:text="           修改地址"
            android:gravity="center_vertical"
            />

        <ImageView
            android:id="@+id/shopshow_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/leftbackbutton_titlebar_pressed"
            android:layout_marginLeft="8dp"
            />
        <TextView
            android:id="@+id/tv_baocun"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:textSize="20sp"
            android:text="保存"
            android:layout_marginRight="10dp"
            android:textColor="#FF5000"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="#fff">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="收货人"
            android:layout_marginLeft="20dp"
            android:textSize="18sp"
            android:gravity="center"/>
        <EditText
            android:id="@+id/address_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@null"
            android:textColor="#000"
            android:textSize="18sp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fff"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:text="联系电话"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/address_phone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@null"
            android:gravity="center"
            android:textColor="#000"
            android:textSize="18sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fff"
        android:id="@+id/city">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="所在地区"
            android:layout_marginLeft="20dp"
            android:textSize="18sp"
            android:gravity="center"/>
        <EditText
            android:id="@+id/tv_city"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@null"
            android:layout_gravity="center"
            android:textColor="#000"

            android:textSize="18sp"
            android:gravity="center"/>
    </RelativeLayout>
    <EditText
        android:id="@+id/tv_address"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fff"
        android:textColor="#000"
        android:hint="     详细地址"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/f5_address_add_moren"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="设为默认地址"
            android:textColor="#000"
            android:textSize="14sp" />

    </LinearLayout>

</LinearLayout>